{
  "name": "back",
  "version": "1.0.0",
  "main": "dist/graphql-backend.js",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c --environment BUILD:production",
    "watch": "rollup -c -w",
    "dev": "concurrently --kill-others-on-fail -p name -n \"BUILD,SERVER\" -c \"yellow.bold,blue.bold\" \"npm run watch\" \"nodemon dist/graphql-backend.js\"",
    "start": "npm run build && node dist/graphql-backend.js"
  },
  "dependencies": {
    "@koa/cors": "2",
    "apollo-server-koa": "^1.3.2",
    "asciify": "^1.3.5",
    "graphql": "^0.12.3",
    "graphql-subscriptions": "^0.5.6",
    "graphql-tools": "^2.14.1",
    "koa": "^2.4.1",
    "koa-body": "^2.5.0",
    "koa-logger": "^3.1.0",
    "koa-router": "^7.3.0",
    "koa-websocket": "^4.1.0",
    "lodash.merge": "^4.6.0",
    "subscriptions-transport-ws": "^0.9.4"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "babelrc-rollup": "^3.0.0",
    "concurrently": "^3.5.1",
    "nodemon": "^1.14.3",
    "rollup": "^0.53.0",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-graphql": "^0.1.0",
    "rollup-watch": "^4.3.1"
